<aside data-menu-target="menu" class="hidden fixed top-16 bottom-0 z-50 w-80 p-4 bg-slate-100 md:block md:sticky md:top-0 md:h-screen">
  <div class="min-h-full flex flex-col justify-between">
    <img class="mb-4 px-4 w-min h-6 md:h-8" src="<%= image_path("logo_famizy_black.svg") %>" alt="Logo Famizy">
    <nav class="flex-1 flex flex-col gap-2">
      <%= link_to families_path, class: "flex items-center px-4 py-2 text-primary-500 rounded-md transition-colors duration-300 transform hover:bg-primary-50" do %>
        <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="w-5 h-5">
          <path stroke-linecap="round" stroke-linejoin="round" d="M7.5 21 3 16.5m0 0L7.5 12M3 16.5h13.5m0-13.5L21 7.5m0 0L16.5 12M21 7.5H7.5"></path>
        </svg>
        <span class="mx-4"><%= t('dashboard-sidebar.links.change_family') %></span>
      <% end %>

      <% if current_user.families.any? %>
        <% if session[:current_family] %>
          <label class="mt-4 px-4 text-sm font-bold text-gray-800 uppercase"><%= Family.find(session[:current_family]).name %></label>
        <% else %>
          <label class="mt-4 px-4 text-sm font-bold text-gray-800 uppercase"><%= current_user.families.first.name %></label>
        <% end %>

        <%= link_to family_path(session[:current_family] || current_user.families.first), class: "flex items-center px-4 py-2 text-gray-800 rounded-md transition-colors duration-300 transform hover:bg-primary-50" do %>
          <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="w-5 h-5">
            <path stroke-linecap="round" stroke-linejoin="round" d="M2.25 12l8.954-8.955c.44-.439 1.152-.439 1.591 0L21.75 12M4.5 9.75v10.125c0 .621.504 1.125 1.125 1.125H9.75v-4.875c0-.621.504-1.125 1.125-1.125h2.25c.621 0 1.125.504 1.125 1.125V21h4.125c.621 0 1.125-.504 1.125-1.125V9.75M8.25 21h8.25" />
          </svg>
          <span class="mx-4"><%= t('dashboard-sidebar.links.overview') %></span>
        <% end %>

        <%= link_to family_lists_path(session[:current_family] || current_user.families.first), class: "flex items-center px-4 py-2 text-gray-800 rounded-md transition-colors duration-300 transform hover:bg-primary-50" do %>
          <svg fill="none" stroke-width="1.5" stroke="currentColor" viewBox="0 0 24 24" xmlns="http://www.w3.org/2000/svg" class="w-5 h-5">
            <path stroke-linecap="round" stroke-linejoin="round" d="M3.75 12h16.5m-16.5 3.75h16.5M3.75 19.5h16.5M5.625 4.5h12.75a1.875 1.875 0 010 3.75H5.625a1.875 1.875 0 010-3.75z" />
          </svg>
          <span class="mx-4"><%= t('dashboard-sidebar.links.lists') %></span>
        <% end %>

        <%= link_to family_recipes_path(session[:current_family] || current_user.families.first), class: "flex items-center px-4 py-2 text-gray-800 rounded-md transition-colors duration-300 transform hover:bg-primary-50" do %>
          <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="w-5 h-5">
            <path stroke-linecap="round" stroke-linejoin="round" d="M9 12h3.75M9 15h3.75M9 18h3.75m3 .75H18a2.25 2.25 0 0 0 2.25-2.25V6.108c0-1.135-.845-2.098-1.976-2.192a48.424 48.424 0 0 0-1.123-.08m-5.801 0c-.065.21-.1.433-.1.664 0 .414.336.75.75.75h4.5a.75.75 0 0 0 .75-.75 2.25 2.25 0 0 0-.1-.664m-5.8 0A2.251 2.251 0 0 1 13.5 2.25H15c1.012 0 1.867.668 2.15 1.586m-5.8 0c-.376.023-.75.05-1.124.08C9.095 4.01 8.25 4.973 8.25 6.108V8.25m0 0H4.875c-.621 0-1.125.504-1.125 1.125v11.25c0 .621.504 1.125 1.125 1.125h9.75c.621 0 1.125-.504 1.125-1.125V9.375c0-.621-.504-1.125-1.125-1.125H8.25ZM6.75 12h.008v.008H6.75V12Zm0 3h.008v.008H6.75V15Zm0 3h.008v.008H6.75V18Z"></path>
          </svg>
          <span class="mx-4"><%= t('dashboard-sidebar.links.recipes') %></span>
        <% end %>

        <%= link_to family_meals_path(session[:current_family] || current_user.families.first), class: "flex items-center px-4 py-2 text-gray-800 rounded-md transition-colors duration-300 transform hover:bg-primary-50" do %>
          <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="w-5 h-5">
            <path stroke-linecap="round" stroke-linejoin="round" d="M3.375 19.5h17.25m-17.25 0a1.125 1.125 0 0 1-1.125-1.125M3.375 19.5h7.5c.621 0 1.125-.504 1.125-1.125m-9.75 0V5.625m0 12.75v-1.5c0-.621.504-1.125 1.125-1.125m18.375 2.625V5.625m0 12.75c0 .621-.504 1.125-1.125 1.125m1.125-1.125v-1.5c0-.621-.504-1.125-1.125-1.125m0 3.75h-7.5A1.125 1.125 0 0 1 12 18.375m9.75-12.75c0-.621-.504-1.125-1.125-1.125H3.375c-.621 0-1.125.504-1.125 1.125m19.5 0v1.5c0 .621-.504 1.125-1.125 1.125M2.25 5.625v1.5c0 .621.504 1.125 1.125 1.125m0 0h17.25m-17.25 0h7.5c.621 0 1.125.504 1.125 1.125M3.375 8.25c-.621 0-1.125.504-1.125 1.125v1.5c0 .621.504 1.125 1.125 1.125m17.25-3.75h-7.5c-.621 0-1.125.504-1.125 1.125m8.625-1.125c.621 0 1.125.504 1.125 1.125v1.5c0 .621-.504 1.125-1.125 1.125m-17.25 0h7.5m-7.5 0c-.621 0-1.125.504-1.125 1.125v1.5c0 .621.504 1.125 1.125 1.125M12 10.875v-1.5m0 1.5c0 .621-.504 1.125-1.125 1.125M12 10.875c0 .621.504 1.125 1.125 1.125m-2.25 0c.621 0 1.125.504 1.125 1.125M13.125 12h7.5m-7.5 0c-.621 0-1.125.504-1.125 1.125M20.625 12c.621 0 1.125.504 1.125 1.125v1.5c0 .621-.504 1.125-1.125 1.125m-17.25 0h7.5M12 14.625v-1.5m0 1.5c0 .621-.504 1.125-1.125 1.125M12 14.625c0 .621.504 1.125 1.125 1.125m-2.25 0c.621 0 1.125.504 1.125 1.125m0 1.5v-1.5m0 0c0-.621.504-1.125 1.125-1.125m0 0h7.5"></path>
          </svg>
          <span class="mx-4"><%= t('dashboard-sidebar.links.meals') %></span>
        <% end %>

        <a class="hidden flex items-center px-4 py-2 text-gray-800 rounded-md transition-colors duration-300 transform hover:bg-primary-50" href="#">
          <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="w-5 h-5">
            <path stroke-linecap="round" stroke-linejoin="round" d="M3.75 3v11.25A2.25 2.25 0 006 16.5h2.25M3.75 3h-1.5m1.5 0h16.5m0 0h1.5m-1.5 0v11.25A2.25 2.25 0 0118 16.5h-2.25m-7.5 0h7.5m-7.5 0l-1 3m8.5-3l1 3m0 0l.5 1.5m-.5-1.5h-9.5m0 0l-.5 1.5m.75-9l3-3 2.148 2.148A12.061 12.061 0 0116.5 7.605" />
          </svg>

          <span class="mx-4"><%= t('dashboard-sidebar.links.expenses') %></span>
        </a>
      <% end %>
    </nav>

    <%= link_to destroy_user_session_path, data: { turbo_method: :delete }, class: "flex items-center px-4 py-2 text-gray-800 rounded-md transition-colors duration-300 transform hover:bg-primary-50" do %>
      <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="w-5 h-5">
        <path stroke-linecap="round" stroke-linejoin="round" d="M8.25 9V5.25A2.25 2.25 0 0 1 10.5 3h6a2.25 2.25 0 0 1 2.25 2.25v13.5A2.25 2.25 0 0 1 16.5 21h-6a2.25 2.25 0 0 1-2.25-2.25V15m-3 0-3-3m0 0 3-3m-3 3H15"></path>
      </svg>
      <span class="mx-4"><%= t('dashboard-sidebar.links.logout') %></span>
    <% end %>
  </div>
</aside>
