<aside data-menu-target="menu" class="hidden absolute top-16 bottom-0 z-10 w-64 p-4 bg-white border-r md:block md:static">
  <div class="flex flex-col justify-between">
    <nav class="flex-1 flex flex-col gap-2">
      <%= link_to families_path, class: "flex items-center px-4 py-2 text-gray-800 rounded-lg transition-colors duration-300 transform hover:bg-gray-100" do %>
