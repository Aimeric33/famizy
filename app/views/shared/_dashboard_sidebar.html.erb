      <%= link_to family_lists_path(session[:current_family_id] || Family.first), class: "flex items-center px-4 py-2 text-gray-800 rounded-lg transition-colors duration-300 transform hover:bg-gray-100" do %>
        <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="w-5 h-5">
