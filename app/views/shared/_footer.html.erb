<footer class="bg-slate-200">
  <div class="container py-8">
    <div class="flex flex-col gap-4 items-center text-center">
      <a href="/">
        <img class="w-auto h-6" src="<%= image_path("logo_famizy_black.svg") %>" alt="Logo Famizy">
      </a>

      <p class="mx-auto text-gray-800"><%= t("footer.subtext") %></p>

      <a href="/users/sign_in" class="inline-block px-4 py-2 text-white bg-primary-500 rounded-md transition-colors duration-300 transform hover:bg-primary-400 focus:outline-none focus:ring focus:ring-primary-300 focus:ring-opacity-80">
        <%= t("footer.cta") %>
      </a>
    </div>

    <hr class="my-6 border-gray-300" />

    <div class="flex flex-col items-center sm:flex-row sm:justify-between gap-4">
      <div class="flex flex-col gap-4 items-center sm:flex-row">
        <a href="/" class="text-sm text-gray-800 hover:underline" aria-label="Home"><%= t("footer.links.home") %></a>
        <a href="mailto:hello@famizy.com" target="_blank" class="text-sm text-gray-800 hover:underline" aria-label="Contact"><%= t("footer.links.contact") %></a>
        <a href="https://famizy.featurebase.app/" target="_blank" class="text-sm text-gray-800 hover:underline" aria-label="Roadmap"><%= t("footer.links.roadmap") %></a>
      </div>
      <p class="text-sm text-gray-800"><%= t("footer.copyright") %></p>
    </div>
  </div>
</footer>
