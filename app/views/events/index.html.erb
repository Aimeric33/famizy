<div class="flex flex-row justify-between items-start px-4 pt-4 pb-12 bg-primary-500">
  <%= render partial: 'shared/page_name', locals: { title: t('.title') } %>
</div>

<div class="p-4 relative -top-8 rounded-[24px] bg-white">
  <%= month_calendar(attribute: :start_date, events: @events) do |date, events| %>
    <%= date.day %>
  <% end %>

  <div class="mt-4">
    <div class="mb-4 flex justify-between items-center gap-4">
      <h2 class="font-bold">
        <%= l(@current_date, format: "%A %d %B %Y") %>
      </h2>
      <%= link_to new_family_event_path(params[:family_id], start_date: @current_date), class:"flex gap-1 text-primary-500" do %>
        <p class="leading-none"><%= t('.add_event') %></p>
        <svg class="w-4 h-4" data-slot="icon" fill="none" stroke-width="1.5" stroke="currentColor" viewBox="0 0 24 24" xmlns="http://www.w3.org/2000/svg" aria-hidden="true">
          <path stroke-linecap="round" stroke-linejoin="round" d="m8.25 4.5 7.5 7.5-7.5 7.5"></path>
        </svg>
      <% end %>
    </div>

    <div class="grid gap-4">
      <% @events.each do |event| %>
        <%= link_to event_path(event) do %>
          <div class="p-4 bg-slate-100 rounded-md flex gap-4">
            <div class="flex flex-col justify-center items-center">
              <p class="font-bold"><%= event.start_date.strftime("%H:%M") %></p>
              <p><%= l(event.end_date, format: :time) %></p>
            </div>
            <div class="flex flex-col justify-center gap-1">
              <h3 class="font-bold text-primary-500"><%= event.name %></h3>
                <div class="flex gap-1 items-center text-sm text-gray-500">
                  <svg class="w-4 h-4" data-slot="icon" fill="none" stroke-width="1.5" stroke="currentColor" viewBox="0 0 24 24" xmlns="http://www.w3.org/2000/svg" aria-hidden="true">
                    <path stroke-linecap="round" stroke-linejoin="round" d="M15 10.5a3 3 0 1 1-6 0 3 3 0 0 1 6 0Z"></path>
                    <path stroke-linecap="round" stroke-linejoin="round" d="M19.5 10.5c0 7.142-7.5 11.25-7.5 11.25S4.5 17.642 4.5 10.5a7.5 7.5 0 1 1 15 0Z"></path>
                  </svg>
                  <% unless event.place.blank? %>
                    <p><%= event.place %></p>
                  <% else %>
                    <p><%= t('.no_place') %></p>
                  <% end %>
                </div>
            </div>
          </div>
        <% end %>
      <% end %>

      <% if @events.empty? %>
        <div class="p-4 bg-slate-100 rounded-md">
          <p class="text-gray-500">
            <%= t('.no_events') %>
          </p>
        </div>
      <% end %>
    </div>
  </div>
</div>
