<header class="pt-14 md:pt-[4.5rem] pb-12 bg-primary-500">
  <div class="container lg:grid lg:grid-cols-2 lg:gap-8 lg:items-center">
    <div class="py-12">
      <h1 class="text-3xl font-extrabold text-white lg:text-4xl">
        <%= t(".hero.title") %>
      </h1>

      <p class="my-6 text-white">
        <%= t(".hero.subtitle") %>
      </p>

      <a href="<%= families_path %>" class="inline-block px-4 py-2 text-primary-500 bg-slate-100 rounded-md transition-colors duration-300 transform hover:bg-slate-200 focus:outline-none focus:ring focus:ring-slate-300 focus:ring-opacity-80">
        <%= t(".hero.cta") %>
      </a>

      <p class="mt-3 text-sm text-white">
        <%= t(".hero.hint") %>
      </p>
    </div>

    <div class="pb-8 lg:pt-8 w-full h-full object-cover lg:h-auto">
      <img class="rounded-md" src="https://images.unsplash.com/photo-1581952976147-5a2d15560349?q=80&w=2342&auto=format&fit=crop&ixlib=rb-4.0.3&ixid=M3wxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8fA%3D%3D" alt="Photo d'une famille heureuse avec Famizy">
    </div>
  </div>
</header>

