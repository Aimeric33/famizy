<div class="flex flex-row justify-between items-start px-4 pb-12 bg-primary-500">
  <%= render partial: 'shared/page_name', locals: { title: t('.title'), link: family_path(@family) } %>

  <div class="z-40 fixed bottom-4 -ml-4 w-full flex justify-center md:relative md:bottom-0 md:ml-0 md:w-auto md:flex-col md:items-start md:gap-4">
    <%= link_to t('.btn-primary'), new_family_recipe_path(@family), class: "inline-block px-4 py-2 w-4/5 md:w-auto text-center text-white md:text-primary-500 bg-primary-500 md:bg-white rounded-md transition-colors duration-300 transform hover:bg-primary-400 md:hover:bg-slate-100 focus:outline-none focus:ring focus:ring-primary-300 focus:ring-opacity-80" %>
  </div>
</div>

<div class="p-4 relative -top-8 rounded-[24px] bg-white">
  <div class="flex gap-4 overflow-x-auto">
    <%= render partial: 'filters', locals: { family: @family } %>
  </div>
  <div class="grid grid-cols-1 gap-4 md:grid-cols-4">
    <% @recipes.each do |recipe| %>
      <%= render partial: 'recipe', locals: { recipe: recipe } %>
    <% end %>

    <% if @recipes.empty? %>
      <div class="p-4 bg-slate-100 rounded-md">
        <p class="text-gray-500">
          <%= t('.no-recipes') %>
        </p>
      </div>
    <% end %>
  </div>
</div>
