<div class="h-screen p-4 flex justify-center items-center">
  <div class="w-full max-w-md p-6 bg-slate-100 rounded-md">
    <div class="flex justify-center">
      <img class="w-auto h-6" src="<%= image_path("logo_famizy_black.svg") %>" alt="Logo Famizy">
    </div>

    <h1 class="my-6 text-2xl font-extrabold text-center text-gray-800"><%= t('.title') %></h1>

    <%= simple_form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :put }) do |f| %>
      <%= f.input :reset_password_token, as: :hidden %>
      <%= f.full_error :reset_password_token %>

      <%= f.input :password,
                  label: t('.label_new_password'),
                  required: true,
                  autofocus: true,
                  hint: ("#{@minimum_password_length} #{t('.min_password_length')}" if @minimum_password_length),
                  input_html: { autocomplete: "new-password" } %>
      <%= f.input :password_confirmation,
                  label: t('.label_password_confirmation'),
                  required: true,
                  input_html: { autocomplete: "new-password" } %>
      <%= f.button :submit, t('.btn'), class: "w-full" %>
    <% end %>

    <div class="mt-6">
      <%= render "devise/shared/links" %>
    </div>
  </div>
</div>
