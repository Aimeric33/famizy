<div class="min-h-screen p-4 flex justify-center items-center">
  <div class="w-full max-w-md p-6 bg-secondary-500 rounded-md">
    <div class="flex justify-center">
      <img class="w-auto h-6" src="<%= image_path("famizy-logo.svg") %>" alt="Logo Famizy">
    </div>

    <h1 class="my-6 text-2xl font-extrabold text-center text-gray-800"><%= t "devise.invitations.edit.title" %></h1>

    <%= simple_form_for(resource, as: resource_name, url: invitation_path(resource_name), html: { method: :put }) do |f| %>
      <%= f.hidden_field :invitation_token %>

      <%= f.input :name,
                  required: true %>
      <%= f.input :birth_date,
                  as: :date,
                  html5: true,
                  required: true %>
      <%= f.input :password,
                  required: true %>
      <%= f.input :password_confirmation,
                  required: true %>

      <%= f.button :submit, t("devise.invitations.edit.submit") %>
    <% end %>
  </div>
</div>
