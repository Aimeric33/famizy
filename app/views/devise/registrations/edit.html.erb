<div class="min-h-screen p-4 flex justify-center items-center">
  <div class="w-full max-w-md p-6 bg-slate-100 rounded-md">
    <div class="flex justify-center">
      <img class="w-auto h-6" src="<%= image_path("logo_famizy_black.svg") %>" alt="Logo Famizy">
    </div>

    <h1 class="my-6 text-2xl font-extrabold text-center text-gray-800"><%= t('.title') %></h1>

    <%= simple_form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| %>
      <%= f.input :email, required: true, autofocus: true %>

      <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
        <p>Currently waiting confirmation for: <%= resource.unconfirmed_email %></p>
      <% end %>

      <%= f.input :password,
                  hint: t('.hint_new_password'),
                  required: false,
                  input_html: { autocomplete: "new-password" } %>
      <%= f.input :password_confirmation,
                  required: false,
                  input_html: { autocomplete: "new-password" } %>
      <%= f.input :current_password,
                  hint: t('.hint_current_password'),
                  required: true,
                  input_html: { autocomplete: "current-password" } %>
      <%= f.button :submit, t('.btn') %>
    <% end %>

    <%= button_to t('.delete'), registration_path(resource_name), class: "inline-block mt-4 px-4 py-2 font-bold text-red-500 bg-white rounded-md border border-red-500 transition-colors duration-300 transform hover:bg-gray-100 focus:outline-none focus:ring focus:ring-red-300 focus:ring-opacity-80", data: { confirm: "Are you sure?", turbo_confirm: "Are you sure?" }, method: :delete %>

    <div class="mt-6">
      <%= render "devise/shared/links" %>
    </div>
  </div>
</div>
