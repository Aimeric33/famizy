<div class="min-h-screen p-4 flex justify-center items-center">
  <div class="w-full max-w-md p-6 bg-secondary-500 rounded-md">
    <div class="flex justify-center">
      <img class="w-auto h-6" src="<%= image_path("famizy-logo.svg") %>" alt="Logo Famizy">
    </div>

    <h1 class="my-6 text-2xl font-extrabold text-center text-gray-800"><%= t('.title') %></h1>

    <%= simple_form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
      <%= f.input :name,
                  placeholder: "John Doe",
                  required: true,
                  autofocus: true,
                  input_html: { autocomplete: "name" } %>
      <%= f.input :birth_date,
                  as: :date,
                  html5: true,
                  required: true,
                  input_html: { autocomplete: "birth_date" } %>
      <%= f.input :email,
                  placeholder: "johndoe@example.com",
                  required: true,
                  input_html: { autocomplete: "email" }%>
      <%= f.input :password,
                  placeholder: "••••••••",
                  required: true,
                  hint: ("#{@minimum_password_length} #{t('.min_password_length')}" if @minimum_password_length),
                  input_html: { autocomplete: "new-password" } %>
      <%= f.input :password_confirmation,
                  placeholder: "••••••••",
                  required: true,
                  input_html: { autocomplete: "new-password" } %>
      <%= f.button :submit, t('.btn'), class: "w-full" %>
    <% end %>

    <div class="mt-6">
      <%= render "devise/shared/links" %>
    </div>
  </div>
</div>
