<div class="flex flex-col justify-between md:flex-row md:items-center">
  <%= render partial: 'shared/page_name', locals: { title: t('.title') } %>
</div>

<div class="mt-8">
  <div class="max-w-2xl p-5 bg-white shadow-xs rounded-lg">
    <p class="mb-4 font-bold text-lg text-gray-800"><%= t('.form_title') %></p>
    <%= render "form", family: @family %>
  </div>
  <div class="mt-4 max-w-2xl p-5 bg-white shadow-xs rounded-lg">
    <p class="mb-4 font-bold text-lg text-gray-800"><%= t('.delete') %></p>
    <%= link_to t('.delete_btn'), family_path(@family), data: { turbo_method: :delete, turbo_confirm: t('.delete_confirm') }, class:"inline-block px-4 py-2 font-bold text-white bg-red-500 rounded-lg transition-colors duration-300 transform hover:bg-red-400 focus:outline-none focus:ring focus:ring-red-300 focus:ring-opacity-80" %>
  </div>
</div>
