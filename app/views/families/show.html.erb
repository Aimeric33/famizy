<div class="flex flex-col justify-between md:flex-row md:items-center">
  <div class="flex flex-row items-center gap-4">
    <%= link_to :back, class:"w-8 h-8 md:w-12 md:h-12" do %>
      <svg data-slot="icon" fill="none" stroke-width="1.5" stroke="currentColor" viewBox="0 0 24 24" xmlns="http://www.w3.org/2000/svg" aria-hidden="true">
        <path stroke-linecap="round" stroke-linejoin="round" d="M15.75 19.5 8.25 12l7.5-7.5"></path>
      </svg>
    <% end %>
    <div>
      <h1 class="text-2xl font-bold text-gray-800 lg:text-3xl dark:text-white"><%= @family.name %></h1>
      <p class="text-gray-400"><%= t('.subtitle') %></p>
    </div>
  </div>

  <div class="mt-4 md:mt-0">
    <%= link_to t('.btn-primary'), '#', class: "inline-flex items-center px-5 py-2 font-medium tracking-wide text-white transition-colors duration-300 transform bg-orange-500 rounded-lg hover:bg-orange-400 focus:outline-none focus:ring focus:ring-orange-300 focus:ring-opacity-80" %>
  </div>
</div>
