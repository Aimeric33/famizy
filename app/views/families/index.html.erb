<div>
  <h1 class="text-2xl font-bold text-gray-800 lg:text-3xl dark:text-white"><%= t("families.index.title") %></h1>

  <div>
    <span class="inline-block w-40 h-1 bg-orange-500 rounded-full"></span>
    <span class="inline-block w-3 h-1 ml-1 bg-orange-500 rounded-full"></span>
    <span class="inline-block w-1 h-1 ml-1 bg-orange-500 rounded-full"></span>
  </div>
</div>

<div class="mt-4">
  <%= link_to new_family_path, class: "inline-flex items-center px-5 py-2 font-medium tracking-wide text-white transition-colors duration-300 transform bg-orange-500 rounded-lg hover:bg-orange-400 focus:outline-none focus:ring focus:ring-orange-300 focus:ring-opacity-80" do %>
    <svg xmlns="http://www.w3.org/2000/svg" class="w-5 h-5" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2">
      <path stroke-linecap="round" stroke-linejoin="round" d="M12 6v6m0 0v6m0-6h6m-6 0H6" />
    </svg>

    <span class="mx-1"><%= t("families.index.btn-new") %></span>
  <% end %>
</div>

<div class="grid grid-cols-1 gap-y-4 md:grid-cols-3 md:gap-8 mt-8">
  <% @families.each do |family| %>
    <div class="overflow-hidden bg-white rounded-lg shadow-lg dark:bg-gray-800">
      <div class="px-4 py-2">
        <h1 class="text-xl font-bold text-gray-800 uppercase dark:text-white"><%= family.name %></h1>
      </div>

      <img class="object-cover w-full h-40" src="https://images.unsplash.com/photo-1542291026-7eec264c27ff?ixlib=rb-1.2.1&ixid=eyJhcHBfaWQiOjEyMDd9&auto=format&fit=crop&w=320&q=80" alt="NIKE AIR">

      <div class="flex items-center justify-between px-4 py-2 bg-gray-900">
        <h1 class="text-lg font-bold text-white">Avatars</h1>
      </div>
    </div>
  <% end %>
</div>
