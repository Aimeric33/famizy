<div class="flex flex-col justify-between md:flex-row md:items-center">
  <%= render partial: 'shared/page_name', locals: { title: t('.title') } %>
</div>

<div class="mt-8 grid grid-cols-1 gap-y-4 auto-rows-fr">
  <% @lists.each do |list| %>
    <div class="w-full p-4 bg-white rounded-md shadow-xs flex flex-col gap-4 md:flex-row md:items-center md:justify-between">
      <%= link_to list_path(list) do %>
        <div class="flex flex-col gap-2 md:flex-row md:items-end md:gap-4">
          <h2 class="text-xl font-bold text-gray-800 leading-none"><%= list.name %></h2>
          <p class="text-md text-gray-400 leading-none"><%= "#{t('.item.last-modified')} #{list.updated_at.strftime("%d/%m/%y")}" %></p>
        </div>
      <% end %>
      <div class="flex items-center justify-between gap-4 md:justify-normal">
        <span class="px-3 py-1 text-xs text-orange-800 uppercase bg-orange-200 rounded-full">
          <%= List.human_attribute_name("list_type.#{list.list_type}") %>
        </span>
        <%= link_to list_path(list), data: {turbo_method: :delete} do %>
          <svg data-slot="icon" class="w-5 h-5" fill="none" stroke-width="1.5" stroke="currentColor" viewBox="0 0 24 24" xmlns="http://www.w3.org/2000/svg" aria-hidden="true">
            <path stroke-linecap="round" stroke-linejoin="round" d="m14.74 9-.346 9m-4.788 0L9.26 9m9.968-3.21c.342.052.682.107 1.022.166m-1.022-.165L18.16 19.673a2.25 2.25 0 0 1-2.244 2.077H8.084a2.25 2.25 0 0 1-2.244-2.077L4.772 5.79m14.456 0a48.108 48.108 0 0 0-3.478-.397m-12 .562c.34-.059.68-.114 1.022-.165m0 0a48.11 48.11 0 0 1 3.478-.397m7.5 0v-.916c0-1.18-.91-2.164-2.09-2.201a51.964 51.964 0 0 0-3.32 0c-1.18.037-2.09 1.022-2.09 2.201v.916m7.5 0a48.667 48.667 0 0 0-7.5 0"></path>
          </svg>
        <% end %>
      </div>
    </div>
  <% end %>

  <% if @lists.empty? %>
    <div class="md:col-span-3 p-4 bg-white rounded-lg shadow-xs">
      <p class="text-gray-800">
        <%= t('.no-lists') %>
      </p>
    </div>
  <% end %>

  <%= link_to new_family_list_path(params[:family_id]), class: "bg-white border-2 border-dashed border-orange-500 rounded-lg text-orange-500 flex items-center justify-center" do %>
    <svg data-slot="icon" class="w-8 h-8" fill="none" stroke-width="2" stroke="currentColor" viewBox="0 0 24 24" xmlns="http://www.w3.org/2000/svg" aria-hidden="true">
      <path stroke-linecap="round" stroke-linejoin="round" d="M12 4.5v15m7.5-7.5h-15"></path>
    </svg>
  <% end %>
</div>
