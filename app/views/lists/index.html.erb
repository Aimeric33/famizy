<div class="flex flex-row justify-between items-start px-4 pt-4 pb-12 bg-primary-500">
  <%= render partial: 'shared/page_name', locals: { title: t('.title') } %>

  <div class="z-50 fixed bottom-4 -ml-4 w-full flex justify-center md:relative md:bottom-0 md:ml-0 md:w-auto md:flex-col md:items-start md:gap-4">
    <%= link_to t('.btn-primary'), new_family_list_path(params[:family_id]), class: "inline-block px-4 py-2 w-4/5 md:w-auto text-center text-white md:text-primary-500 bg-primary-500 md:bg-white rounded-md transition-colors duration-300 transform hover:bg-primary-400 md:hover:bg-slate-100 focus:outline-none focus:ring focus:ring-primary-300 focus:ring-opacity-80" %>
  </div>
</div>

<div class="p-4 relative -top-8 rounded-[24px] bg-white grid grid-cols-1 gap-4 auto-rows-fr md:grid-cols-3">
  <% @lists.each do |list| %>
    <%= link_to list_path(list) do %>
      <div class="w-full p-4 bg-slate-100 rounded-md">
        <h2 class="mb-4 text-lg md:text-xl text-gray-800"><%= list.name %></h2>
        <div class="mb-2">
          <span class="px-3 py-1 text-sm text-primary-500 bg-primary-50 rounded-md">
            <%= List.human_attribute_name("list_type.#{list.list_type}") %>
          </span>
        </div>
        <p class="text-gray-500"><%= l(list.updated_at, format: '%d %B %Y') %></p>
      </div>
    <% end %>
  <% end %>

  <% if @lists.empty? %>
    <div class="md:col-span-3 p-4 bg-slate-100 rounded-md">
      <p class="text-gray-500">
        <%= t('.no-lists') %>
      </p>
    </div>
  <% end %>
</div>
